<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
    <DefineConstants Condition="'$(TargetFramework)'=='net452'">$(DefineConstants);NETFWK</DefineConstants>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GeneratePackageOnBuild Condition=" '$(Configuration)|$(GenerateNuGetPackage)' == 'Release|true' ">true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Version Condition="'$(APPVEYOR_REPO_TAG)' == 'false'">$(Version)-pre</Version>
    <Authors>Lucas Trzesniewski</Authors>
    <Description>Inject arbitrary IL code at compile time.</Description>
    <PackageTags>IL, MSIL, Fody, ILWeaving, Cecil</PackageTags>
    <PackageProjectUrl>https://github.com/ltrzesniewski/InlineIL.Fody</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/ltrzesniewski/InlineIL.Fody/blob/master/LICENSE</PackageLicenseUrl>
    <PackageOutputPath>$(MSBuildThisFileDirectory)..\..\output</PackageOutputPath>
    <PackageIconUrl></PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="3.0.1" PrivateAssets="None" />
    <PackageReference Include="FodyPackaging" Version="3.0.1" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Update="OpCodes.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>OpCodes.cs</LastGenOutput>
    </None>
    <Compile Update="OpCodes.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>OpCodes.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

</Project>
